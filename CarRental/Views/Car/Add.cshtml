@model CarRental.ViewModels.CarViewModel

<div class="container py-5">
    <div class="card mx-auto shadow-lg rounded-4 car-card" style="max-width: 700px;">
        <div class="card-header text-white py-4 rounded-top" style="background: rgba(0,0,0,0.6); border-bottom: 1px solid rgba(255,0,0,0.3);">
            <h2 class="mb-0"><i class="bi bi-car-front-fill me-2"></i>Add Car</h2>
        </div>

        <div class="card-body p-4 text-white">
            <form method="post" enctype="multipart/form-data" id="carForm">

                <!-- Brand & Model -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="CarBrand" class="form-label fw-bold">Brand</label>
                        <input asp-for="CarBrand" class="form-control custom-input" placeholder="e.g. Toyota" />
                        <span asp-validation-for="CarBrand" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CarModel" class="form-label fw-bold">Model</label>
                        <input asp-for="CarModel" class="form-control custom-input" placeholder="e.g. Corolla" />
                        <span asp-validation-for="CarModel" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Colour & Seats -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="CarColour" class="form-label fw-bold">Colour</label>
                        <input asp-for="CarColour" class="form-control custom-input" placeholder="e.g. Red" />
                        <span asp-validation-for="CarColour" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Seats" class="form-label fw-bold">Seats</label>
                        <input asp-for="Seats" type="number" min="2" class="form-control custom-input" placeholder="4" />
                    </div>
                </div>

                <!-- Fuel & Transmission -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Fuel Type</label>
                        <select asp-for="FuelType" class="form-select custom-input">
                            <option>Petrol</option>
                            <option>Diesel</option>
                            <option>Hybrid</option>
                            <option>Electric</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Transmission</label>
                        <select asp-for="Transmission" class="form-select custom-input">
                            <option>Auto</option>
                            <option>Manual</option>
                        </select>
                    </div>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="PricePerDay" class="form-label fw-bold">Price per Day</label>
                    <input asp-for="PricePerDay" class="form-control custom-input" placeholder="e.g. 2500" />
                    <span asp-validation-for="PricePerDay" class="text-danger small"></span>
                </div>

                <!-- AC & Status -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">AC</label>
                        <select asp-for="HasAC" class="form-select custom-input">
                            <option value="true">AC</option>
                            <option value="false">Non-AC</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-center mt-4">
                        <div class="form-check form-switch">
                            <input asp-for="Status" class="form-check-input" />
                            <label asp-for="Status" class="form-check-label fw-bold">Available</label>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control custom-input" placeholder="Write something about the car..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Images -->
                <div class="mb-4">
                    <label asp-for="ImageFiles" class="form-label fw-bold">Upload Images</label>
                    <input asp-for="ImageFiles" type="file" class="form-control custom-input" multiple />
                    <span asp-validation-for="ImageFiles" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100 fw-bold py-2" id="submitBtn">
                    💾 Add Car
                </button>

            </form>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div id="success-msg" class="alert alert-success mt-4 text-center mx-auto" style="max-width: 700px;">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        </div>

        <script>
            setTimeout(() => document.getElementById('success-msg')?.remove(), 5000);
        </script>
    }
</div>

@section Scripts {
    <script>
        document.getElementById("carForm").addEventListener("submit", function () {
            const btn = document.getElementById("submitBtn");
            btn.disabled = true;
            btn.innerText = "⏳ Saving...";
        });
    </script>
}

<style>
    :root {
        --primary-red: #ff0000;
        --dark-bg: #121212;
        --light-text: #f8f9fa;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--light-text);
    }

    .car-card {
        background-color: rgba(18,18,18,0.85);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255,0,0,0.3);
    }

    .custom-input {
        background-color: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,0,0,0.4);
        color: var(--light-text);
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            background-color: rgba(0,0,0,0.7);
            border-color: var(--primary-red);
            box-shadow: 0 0 7px 2px rgba(255,0,0,0.6);
            color: #fff;
        }

    .btn-primary {
        background-color: var(--primary-red);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: transparent;
            border: 1px solid var(--primary-red);
            box-shadow: 0 0 10px rgba(255,0,0,0.8);
            transform: scale(1.05);
        }

    label {
        color: var(--light-text);
    }
</style>
