@model CarRental.ViewModels.CarViewModel

<div class="container py-5">
    <div class="card mx-auto shadow-lg rounded-4 car-card" style="max-width: 700px; border: 1px solid #ff0000;">
        <div class="card-header text-center py-4 rounded-top" style="background: linear-gradient(90deg,#ff0000,#ff4d4d);">
            <h2 class="text-white mb-0"><i class="bi bi-car-front-fill me-2"></i>Add Car</h2>
        </div>

        <div class="card-body p-4">

            <form method="post" enctype="multipart/form-data" id="carForm">

                <!-- Brand & Model -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="CarBrand" class="form-label text-white">Brand</label>
                        <input asp-for="CarBrand" class="form-control car-input" placeholder="e.g. Toyota" />
                        <span asp-validation-for="CarBrand" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CarModel" class="form-label text-white">Model</label>
                        <input asp-for="CarModel" class="form-control car-input" placeholder="e.g. Corolla" />
                        <span asp-validation-for="CarModel" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Colour & Seats -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="CarColour" class="form-label text-white">Colour</label>
                        <input asp-for="CarColour" class="form-control car-input" placeholder="e.g. Red" />
                        <span asp-validation-for="CarColour" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-white">Seats</label>
                        <input asp-for="Seats" type="number" min="2" class="form-control car-input" placeholder="4" />
                    </div>
                </div>

                <!-- Fuel & Transmission -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label text-white">Fuel Type</label>
                        <select asp-for="FuelType" class="form-select car-input">
                            <option>Petrol</option>
                            <option>Diesel</option>
                            <option>Hybrid</option>
                            <option>Electric</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-white">Transmission</label>
                        <select asp-for="Transmission" class="form-select car-input">
                            <option>Auto</option>
                            <option>Manual</option>
                        </select>
                    </div>
                </div>

                <!-- AC & Status -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label text-white">AC</label>
                        <select asp-for="HasAC" class="form-select car-input">
                            <option value="true">AC</option>
                            <option value="false">Non-AC</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-center mt-4">
                        <div class="form-check form-switch">
                            <input asp-for="Status" class="form-check-input bg-light border-light" />
                            <label asp-for="Status" class="form-check-label text-white">Available</label>
                        </div>
                    </div>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="PricePerDay" class="form-label text-white">Price per Day</label>
                    <input asp-for="PricePerDay" class="form-control car-input" placeholder="e.g. 2500" />
                    <span asp-validation-for="PricePerDay" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-white">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control car-input" placeholder="Write something about the car..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Images -->
                <div class="mb-4">
                    <label asp-for="ImageFiles" class="form-label text-white">Upload Images</label>
                    <input asp-for="ImageFiles" type="file" class="form-control car-input" multiple />
                    <span asp-validation-for="ImageFiles" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100 fw-bold py-2" id="submitBtn">
                    💾 Add Car
                </button>

            </form>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div id="success-msg" class="alert alert-success mt-4 text-center mx-auto" style="max-width: 700px;">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        </div>

        <script>
            setTimeout(() => document.getElementById('success-msg')?.remove(), 5000);
        </script>
    }
</div>

@section Scripts {
    <script>
        document.getElementById("carForm").addEventListener("submit", function () {
            const btn = document.getElementById("submitBtn");
            btn.disabled = true;
            btn.innerText = "⏳ Saving...";
        });
    </script>
}

<style>
    /* Card Theme Matching Index Page */
    .car-card {
        background-color: #121212;
        color: #f8f9fa;
        border-radius: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 0 5px 5px rgba(255, 0, 0, 0.3);
    }

        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px 10px rgba(255, 0, 0, 0.7);
            border-color: #ff0000;
        }

    .car-input {
        background-color: #1f1f2e;
        color: #f8f9fa;
        border: 1px solid #ff0000;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

        .car-input:focus {
            border-color: #ff4d4d;
            box-shadow: 0 0 5px 2px rgba(255, 0, 0, 0.5);
            background-color: #1f1f2e;
            color: #f8f9fa;
        }

    .btn-primary {
        background-color: #ff0000;
        border: 1px solid #ff0000;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: transparent;
            color: #ff0000;
            box-shadow: 0 0 10px 3px rgba(255, 0, 0, 0.7);
            transform: translateY(-2px);
        }
</style>
