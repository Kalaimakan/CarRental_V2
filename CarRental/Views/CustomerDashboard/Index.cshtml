@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row g-3">
        <div class="col-12">
            <div class="card p-4 mb-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3 class="mb-1">Welcome back 👋</h3>
                        <div class="text-muted">Manage bookings, browse cars, and view support right from here.</div>
                    </div>
                    <div class="text-end">
                        <div class="text-muted small">Today</div>
                        <div class="fw-bold">@(DateTime.Now.ToString("dd MMM, yyyy"))</div>
                    </div>
                </div>
            </div>
        </div>

        @* <!-- cards -->
        <div class="col-lg-4 col-md-6">
            <div class="card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Upcoming Bookings</div>
                        <div class="fs-4 fw-bold">2</div>
                    </div>
                    <i class="bi bi-calendar-check fs-3"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Saved Cars</div>
                        <div class="fs-4 fw-bold">5</div>
                    </div>
                    <i class="bi bi-heart fs-3"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Support Tickets</div>
                        <div class="fs-4 fw-bold">1</div>
                    </div>
                    <i class="bi bi-headset fs-3"></i>
                </div>
            </div>
        </div>

        <!-- Recent bookings / quick actions -->
        <div class="col-lg-8">
            <div class="card p-3">
                <h5>Recent Bookings</h5>
                <div class="text-muted small">No bookings found. Browse cars to make your first booking.</div>
                <div class="mt-3"><a href="/Car/Browse" class="btn btn-outline-primary btn-sm">Browse Cars</a></div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <h6>Quick Actions</h6>
                <ul class="list-unstyled mt-2 mb-0">
                    <li class="mb-2"><a href="#" class="text-muted">📄 Download Invoice</a></li>
                    <li class="mb-2"><a href="#" class="text-muted">⭐ Rate your booking</a></li>
                    <li class="mb-2"><a href="#" class="text-muted">⚙️ Account settings</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
 *@