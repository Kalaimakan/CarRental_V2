@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "_Layout";
}

<div class="dashboard-container">
    <!-- Quick Actions Bar -->
    <div class="quick-actions-bar">
        <h3>Quick Actions</h3>
        <div class="quick-actions">
            <a href="@Url.Action("BrowseCars", "CustomerDashboard")" class="quick-action-btn">
                <i class="bi bi-car-front"></i>
                <span>Browse Cars</span>
            </a>
            <a href="@Url.Action("MyBookings", "CustomerDashboard")" class="quick-action-btn">
                <i class="bi bi-calendar-check"></i>
                <span>My Bookings</span>
            </a>
            <a href="@Url.Action("Feedback", "CustomerDashboard")" class="quick-action-btn">
                <i class="bi bi-chat-left-text"></i>
                <span>Feedback</span>
            </a>
            <a href="@Url.Action("HelpAndFAQ", "CustomerDashboard")" class="quick-action-btn">
                <i class="bi bi-question-circle"></i>
                <span>Help & FAQ</span>
            </a>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stat-content">
                <h4>3</h4>
                <p>Active Bookings</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-car-front"></i>
            </div>
            <div class="stat-content">
                <h4>12</h4>
                <p>Total Rentals</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-star-fill"></i>
            </div>
            <div class="stat-content">
                <h4>4.8</h4>
                <p>Rating</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-wallet2"></i>
            </div>
            <div class="stat-content">
                <h4>$2,450</h4>
                <p>Total Spent</p>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="dashboard-grid">
        <!-- Current Bookings -->
        <div class="dashboard-card current-bookings">
            <div class="card-header">
                <h3>
                    <i class="bi bi-calendar-event"></i>
                    Current Bookings
                </h3>
                <a href="@Url.Action("MyBookings", "CustomerDashboard")" class="view-all-link">View All</a>
            </div>
            <div class="bookings-list">
                <div class="booking-item">
                    <div class="booking-info">
                        <h4>Toyota Camry 2023</h4>
                        <p>Pickup: Today, 2:00 PM</p>
                        <p>Return: Tomorrow, 2:00 PM</p>
                    </div>
                    <div class="booking-status status-active">
                        <span>Active</span>
                    </div>
                </div>
                <div class="booking-item">
                    <div class="booking-info">
                        <h4>Honda Civic 2022</h4>
                        <p>Pickup: Dec 15, 10:00 AM</p>
                        <p>Return: Dec 17, 10:00 AM</p>
                    </div>
                    <div class="booking-status status-upcoming">
                        <span>Upcoming</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Available Cars -->
        <div class="dashboard-card available-cars">
            <div class="card-header">
                <h3>
                    <i class="bi bi-car-front"></i>
                    Popular Cars
                </h3>
                <a href="@Url.Action("BrowseCars", "CustomerDashboard")" class="view-all-link">Browse All</a>
            </div>
            <div class="cars-grid">
                <div class="car-item">
                    <div class="car-image">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                    <div class="car-info">
                        <h4>Toyota Camry</h4>
                        <p>From $45/day</p>
                        <div class="car-rating">
                            <i class="bi bi-star-fill"></i>
                            <span>4.8</span>
                        </div>
                    </div>
                </div>
                <div class="car-item">
                    <div class="car-image">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                    <div class="car-info">
                        <h4>Honda Civic</h4>
                        <p>From $38/day</p>
                        <div class="car-rating">
                            <i class="bi bi-star-fill"></i>
                            <span>4.6</span>
                        </div>
                    </div>
                </div>
                <div class="car-item">
                    <div class="car-image">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                    <div class="car-info">
                        <h4>BMW 3 Series</h4>
                        <p>From $85/day</p>
                        <div class="car-rating">
                            <i class="bi bi-star-fill"></i>
                            <span>4.9</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        

        <!-- Recent Activity -->
        <div class="dashboard-card recent-activity">
            <div class="card-header">
                <h3>
                    <i class="bi bi-clock-history"></i>
                    Recent Activity
                </h3>
            </div>
            <div class="activity-list">
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Booking Confirmed</h4>
                        <p>Toyota Camry for Dec 10-12</p>
                        <span class="activity-time">2 hours ago</span>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Review Submitted</h4>
                        <p>Rated Honda Civic 5 stars</p>
                        <span class="activity-time">1 day ago</span>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="bi bi-car-front"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Car Returned</h4>
                        <p>BMW 3 Series returned successfully</p>
                        <span class="activity-time">3 days ago</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
