@{
    ViewData["Title"] = "My Bookings";
    Layout = "_Layout";
}

<h1>My Bookings</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Car</th>
                <th>Pickup Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.Car.Make @booking.Car.Model</td> @* Assuming Booking model has Car navigation property *@
                    <td>@booking.PickupDate.ToShortDateString()</td>
                    <td>@booking.ReturnDate.ToShortDateString()</td>
                    <td>@booking.Status</td>
                    <td>$@booking.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You don't have any bookings yet. <a href="@Url.Action("BrowseCars", "CustomerDashboard")">Browse cars to make your first booking!</a></p>
}