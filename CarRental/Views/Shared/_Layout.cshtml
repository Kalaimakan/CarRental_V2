    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Easy Ride Rentals</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-y..." crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>
            .navbar {
                background-color: rgba(0, 0, 0, 0.2);
                backdrop-filter: blur(15px);
                transition: background-color 0.3s ease;
            }

                .navbar.scrolled {
                    background-color: rgba(0, 0, 0, 0.7) !important;
                }

            .navbar-brand,
            .nav-link {
                color: white !important;
                text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
            }

            .navbar-toggler {
                border-color: rgba(255,255,255,0.5);
            }

            /* Nav underline effect */
            .nav-underline .nav-link {
                border-bottom: none !important;
                position: relative;
                padding-bottom: 10px;
                margin: 0 14px;
                transition: all 0.4s ease;
                color: white !important;
                font-weight: 500;
            }

           
                /* Hover effect */
                .nav-underline .nav-link:hover {
                    transform: scale(1.1);
                    color: red !important;
                }

                /* Active link effect */
                .nav-underline .nav-link.active {
                    color: red !important;
                    transform: scale(1.1);
                    font-weight: 600;
                }
            .nav-underline {
                position: relative;
            }

            .nav-underline-slider {
                position: absolute;
                bottom: 0;
                left: 0;
                height: 2px;
                width: 0;
                background-color: red;
                transition: all 0.3s ease;
                pointer-events: none;
            }
            /* Social icons */
            .navbar a i {
                padding-top: 20px;
                padding-left: 7px;
                font-size: 25px;
                color: white;
                transition: transform 0.5s ease, color 0.4s ease;
                transform-style: preserve-3d;
            }

            .navbar a:hover i {
                color: red;
                transform: scale(1.2);
            }

        </style>

    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg fs-6 fixed-top">
                <div class="container-fluid ">
                    <h1 class="navbar-brand fs-3 mt-1">Easy <span style="color:red;">Ride</span></h1>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                        <ul class="navbar-nav nav-underline position-relative">
                            <div class="nav-underline-slider"></div>

                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Gallery" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "AboutUs" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Account" && ViewContext.RouteData.Values["Action"].ToString() == "CustomerLogin" ? "active" : "")"
                                   asp-area="" asp-controller="Account" asp-action="CustomerLogin">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Customer" && ViewContext.RouteData.Values["Action"].ToString() == "RegisterCustomer" ? "active" : "")"
                                   asp-area="" asp-controller="Customer" asp-action="RegisterCustomer">Register</a>
                            </li>
                        </ul>


                    </div>
                    <div class="d-flex gap-3">
                        <a href="https://www.youtube.com/nationalcarrental" target="_blank" class="text-white">
                            <i class="fab fa-youtube fa-lg"></i>
                        </a>
                        <a href="https://www.instagram.com/nationalcarrental/?hl=en" target="_blank" class="text-white">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                        <a href="https://www.facebook.com/NationalCarRental/" target="_blank" class="text-white">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container-fluid p-0">
            @RenderBody()
        </div>
        <script>
            // === Navbar scroll effect ===
            window.addEventListener("scroll", function () {
                const navbar = document.querySelector(".navbar");
                if (window.scrollY > 50) {
                    navbar.classList.add("scrolled");
                } else {
                    navbar.classList.remove("scrolled");
                }
            });

            // === Sliding underline ===
            const slider = document.querySelector(".nav-underline-slider");

            function moveSlider(link) {
                slider.style.width = link.offsetWidth + "px";
                slider.style.left = link.offsetLeft + "px";
            }

            // On page load: position slider under the active link
            const activeLink = document.querySelector(".nav-underline .nav-link.active");
            if (activeLink) moveSlider(activeLink);

            // Reposition slider on window resize
            window.addEventListener("resize", () => {
                const activeLink = document.querySelector(".nav-underline .nav-link.active");
                if (activeLink) moveSlider(activeLink);
            });
        </script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
