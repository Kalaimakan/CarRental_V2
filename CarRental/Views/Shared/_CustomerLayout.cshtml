@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Dashboard</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/customer.css" rel="stylesheet" />
</head>
<body>
    <div class="app-shell">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Brand -->
            <div class="d-flex align-items-center mb-4">
                <div class="avatar me-2">CR</div>
                <div>
                    <h5 class="mb-0">CarRental</h5>
                    <small class="text-muted">Customer Dashboard</small>
                </div>
            </div>

            <!-- Navigation -->
            <ul class="nav flex-column gap-1">
                <li class="nav-item">
                    <a href="/CustomerDashboard/Index" class="nav-link active">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Cars/Browse" class="nav-link">
                        <i class="bi bi-car-front"></i> Browse Cars
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Bookings/MyBookings" class="nav-link">
                        <i class="bi bi-journal-text"></i> My Bookings
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Feedback/Create" class="nav-link">
                        <i class="bi bi-chat-dots"></i> Feedback
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Help/Index" class="nav-link">
                        <i class="bi bi-question-circle"></i> Help & FAQ
                    </a>
                </li>
            </ul>

            <!-- Profile -->
            <div class="profile mt-auto">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <div class="avatar">C</div>
                    <div>
                        <strong>Customer</strong><br />
                        <small class="text-muted">customer@carrental</small>
                    </div>
                </div>
                <a href="/Account/Logout" class="btn btn-outline-primary btn-sm w-100">Logout</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top bar -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <!-- Mobile menu button -->
                <button id="sidebarToggle" class="btn btn-outline-primary d-md-none">☰</button>

                <h4 class="mb-0">@ViewData["Title"]</h4>

                <!-- Theme toggle -->
                <button id="themeToggle" class="btn btn-sm btn-outline-secondary">
                    <span id="themeIcon">🌙 Dark</span>
                </button>
            </div>

            <!-- Body content -->
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/customer.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
