@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Dashboard</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Theme variables */
        :root {
            --primary-red: #ff0000;
            --dark-red: #cc0000;
            --dark-bg: #121212;
            --light-text: #f8f9fa;
            --sidebar-width: 240px;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark-bg);
            color: var(--light-text);
        }

        .app-shell {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background-color: #1a1a1a;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

            .sidebar .nav-link {
                color: var(--light-text);
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: var(--primary-red);
                    background-color: rgba(255,0,0,0.1);
                    border-radius: 8px;
                }

            .sidebar .avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: var(--primary-red);
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
                color: white;
            }

            .sidebar .profile {
                margin-top: auto;
            }

        .btn-outline-primary {
            color: var(--primary-red);
            border-color: var(--primary-red);
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: var(--primary-red);
                color: #fff;
                border-color: var(--primary-red);
            }

        /* Main content */
        .main-content {
            flex: 1;
            padding: 20px;
        }

        /* Theme toggle button */
        #themeToggle {
            cursor: pointer;
        }

        /* Card hover effect + Available Cars theme */
        .card {
            background-color: rgba(18, 18, 18, 0.95);
            border: 1px solid var(--primary-red);
            border-radius: 10px;
            color: var(--light-text);
            transition: all 0.3s ease;
            overflow: hidden;
            position: relative;
            box-shadow: 0 0 5px 5px rgba(255, 0, 0, 0.2);
        }

            .card:hover {
                transform: translateY(-5px);
                border-color: var(--primary-red);
                box-shadow: 0 0 20px 8px rgba(255, 0, 0, 0.5);
            }

        .card-img-top {
            height: 180px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .price-tag {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: rgba(255, 0, 0, 0.8);
            color: white;
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 0.9rem;
            z-index: 2;
        }

        .badge {
            font-size: 0.85rem;
        }

        h2, p {
            text-align: center;
        }

        .car-card {
            transition: all 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="app-shell">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="d-flex align-items-center mb-4">
                <div class="avatar me-2">CR</div>
                <div>
                    <h5 class="mb-0">CarRental</h5>
                    <small class="text-muted">Customer Dashboard</small>
                </div>
            </div>

            <ul class="nav flex-column gap-1">
                <li class="nav-item"><a href="/CustomerDashboard/Index" class="nav-link active"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                <li class="nav-item"><a asp-controller="CustomerDashboard" asp-action="ShowAllCars" class="nav-link"><i class="bi bi-car-front"></i> Browse Cars</a></li>
                <li class="nav-item"><a href="/Bookings/MyBookings" class="nav-link"><i class="bi bi-journal-text"></i> My Bookings</a></li>
                <li class="nav-item"><a href="/Feedback/Create" class="nav-link"><i class="bi bi-chat-dots"></i> Feedback</a></li>
                <li class="nav-item"><a href="/Help/Index" class="nav-link"><i class="bi bi-question-circle"></i> Help & FAQ</a></li>
            </ul>

            <div class="profile mt-auto">
                <div class="d-flex align-items-center gap-2 mb-2">
                    @{
                        var fullName = User.Identity?.Name ?? "";
                        var initials = string.Join("", fullName
                        .Split(" ", StringSplitOptions.RemoveEmptyEntries)
                        .Select(n => n[0]))
                        .ToUpper();
                    }
                    <div class="avatar">@initials</div>
                    <div>
                        <strong>@User.Identity?.Name</strong><br />
                        <small class="text-muted">@User.FindFirst("Email")?.Value</small>
                    </div>
                </div>
                <a href="/Account/Logout" class="btn btn-outline-primary btn-sm w-100">Logout</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <button id="sidebarToggle" class="btn btn-outline-primary d-md-none">☰</button>
                <h4 class="mb-0">@ViewData["Title"]</h4>
                <button id="themeToggle" class="btn btn-sm btn-outline-secondary">
                    <span id="themeIcon">🌙 Dark</span>
                </button>
            </div>

            <!-- Body content: Render your pages (Available Cars etc.) -->
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<script>
    // Auto hide welcome message after 5 seconds
    setTimeout(() => {
        const msg = document.getElementById("welcomeMsg");
        if (msg) {
            msg.classList.add("fade");
            setTimeout(() => msg.remove(), 500); 
        }
    }, 5000);
</script>