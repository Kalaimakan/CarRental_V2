
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CarRental Admin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Common styles */
        body {
            min-height: 100vh;
            font-family: "Inter", sans-serif;
            display: flex;
            transition: background 0.3s, color 0.3s;
        }

        /* Sidebar common */
        .sidebar {
            width: 260px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 1rem;
            transition: background 0.3s, color 0.3s;
        }

            .sidebar .nav-link {
                border-radius: 8px;
                transition: 0.3s;
            }

        /* Avatar common */
        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            transition: background 0.3s, color 0.3s;
        }

        /* Profile */
        .profile {
            border-top: 1px solid;
            padding-top: 1rem;
        }

            .profile .avatar {
                width: 36px;
                height: 36px;
                transition: background 0.3s;
            }

        /* Main content */
        .main-content {
            flex-grow: 1;
            padding: 2rem;
            transition: background 0.3s, color 0.3s;
        }

        /* Cards */
        .card {
            border: none;
            backdrop-filter: blur(10px);
            transition: background 0.3s, color 0.3s;
        }

        /* Submenu toggle icon */
        .submenu-toggle {
            transition: transform 0.3s, color 0.3s;
        }

        .nav-link[aria-expanded="true"] .submenu-toggle {
            transform: rotate(90deg);
        }

        /* Submenu links */
        .submenu .nav-link {
            padding-left: 2rem;
            font-size: 0.95rem;
        }

        /* ------------------- DARK THEME ------------------- */
        body.dark-theme {
            background: linear-gradient(180deg, #071028 0%, #071226 60%);
            color: #e6eef8;
        }

            body.dark-theme .sidebar {
                background: rgba(255, 255, 255, 0.05);
                color: #cfe6ff;
                backdrop-filter: blur(10px);
            }

                body.dark-theme .sidebar .nav-link {
                    color: #cfe6ff;
                }

                    body.dark-theme .sidebar .nav-link.active,
                    body.dark-theme .sidebar .nav-link:hover {
                        background: rgba(255, 255, 255, 0.15);
                        color: #fff;
                    }

            body.dark-theme .card {
                background: rgba(255, 255, 255, 0.05);
                color: #e6eef8;
            }

            body.dark-theme .avatar {
                background: linear-gradient(135deg, #4f46e5, #06b6d4);
                color: #fff;
            }

            body.dark-theme .profile {
                border-top-color: rgba(255, 255, 255, 0.2);
            }

        /* ------------------- LIGHT THEME ------------------- */
        body.light-theme {
            background: #f8f9fa;
            color: #212529;
        }

            body.light-theme .sidebar {
                background: #fff;
                color: #495057;
                backdrop-filter: none;
            }

                body.light-theme .sidebar .nav-link {
                    color: #495057;
                }

                    body.light-theme .sidebar .nav-link.active,
                    body.light-theme .sidebar .nav-link:hover {
                        background: #e2e6ea;
                        color: #212529;
                    }

            body.light-theme .card {
                background: #fff;
                color: #212529;
                backdrop-filter: none;
            }

            body.light-theme .avatar {
                background: linear-gradient(135deg, #4f46e5, #06b6d4);
                color: #fff;
            }

            body.light-theme .profile {
                border-top-color: #ced4da;
            }

    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar text-white">
        <!-- Brand -->
        <div class="d-flex align-items-center mb-4">
            <div class="avatar me-2">CR</div>
            <div>
                <h5 class="mb-0">CarRental</h5>
                <small class="text-secondary">Admin Dashboard</small>
            </div>
        </div>

        <!-- Navigation -->
        <ul class="nav nav-pills flex-column gap-1">
            <li class="nav-item">
                <a href="/AdminDashboard/AdminDashboard" class="nav-link active">Overview</a>
            </li>

            <!-- Customer Management -->
            <li class="nav-item">
                <a class="nav-link d-flex justify-content-between" data-bs-toggle="collapse" href="#customerSubmenu" role="button" aria-expanded="false">
                    Customer Management
                    <i class="bi bi-chevron-right submenu-toggle"></i>
                </a>
                <div class="collapse submenu" id="customerSubmenu">
                    <ul class="nav flex-column ms-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Add">Add Customer</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="ViewCustomer">All Customers</a></li>
                    </ul>
                </div>
            </li>

            <!-- Car Management -->
            <li class="nav-item">
                <a class="nav-link d-flex justify-content-between" data-bs-toggle="collapse" href="#carSubmenu" role="button" aria-expanded="false">
                    Car Management
                    <i class="bi bi-chevron-right submenu-toggle"></i>
                </a>
                <div class="collapse submenu" id="carSubmenu">
                    <ul class="nav flex-column ms-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Car" asp-action="Add">Add Car</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Car" asp-action="ViewCar">All Cars</a></li>
                    </ul>
                </div>
            </li>

            <li class="nav-item"><a href="/Reports/Index" class="nav-link">Reports</a></li>
            <li class="nav-item"><a href="/Settings/Index" class="nav-link">Settings</a></li>
        </ul>

        <!-- Profile -->
        <div class="profile mt-auto d-flex flex-column gap-2">
            <div class="d-flex align-items-center gap-2 justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <div class="avatar">A</div>
                    <div>
                        <strong>Admin</strong><br />
                        <small class="text-secondary">admin@carrental</small>
                    </div>
                </div>

                <!-- Dark/Light toggle button -->
                <button id="themeToggle" class="btn btn-sm btn-outline-light">
                    <i class="bi bi-moon-fill" id="themeIcon"></i>
                </button>
            </div>
            <a href="/Account/Logout" class="btn btn-outline-light btn-sm mt-2">Logout</a>
        </div>

    </div>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Remember last open submenu using localStorage
        document.querySelectorAll('.sidebar .collapse').forEach(collapseEl => {
            collapseEl.addEventListener('shown.bs.collapse', function () {
                localStorage.setItem('openSubmenu', this.id);
            });
            collapseEl.addEventListener('hidden.bs.collapse', function () {
                if (localStorage.getItem('openSubmenu') === this.id) {
                    localStorage.removeItem('openSubmenu');
                }
            });
        });

        // Restore submenu state on page load
        const openSubmenuId = localStorage.getItem('openSubmenu');
        if (openSubmenuId) {
            const openEl = document.getElementById(openSubmenuId);
            if (openEl) {
                new bootstrap.Collapse(openEl, { toggle: true });
            }
        }

        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');

        // Load saved theme from localStorage
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            document.body.classList.add(savedTheme);
            themeIcon.className = savedTheme === 'dark-theme' ? 'bi bi-moon-fill' : 'bi bi-sun-fill';
        } else {
            document.body.classList.add('dark-theme'); // default
        }

        themeToggle.addEventListener('click', () => {
            if (document.body.classList.contains('dark-theme')) {
                document.body.classList.remove('dark-theme');
                document.body.classList.add('light-theme');
                themeIcon.className = 'bi bi-sun-fill';
                localStorage.setItem('theme', 'light-theme');
            } else {
                document.body.classList.remove('light-theme');
                document.body.classList.add('dark-theme');
                themeIcon.className = 'bi bi-moon-fill';
                localStorage.setItem('theme', 'dark-theme');
            }
        });

    </script>

    @RenderSection("Scripts", required: false)
</body>