@model CarRental.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Login";
}

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<body>
    <!-- Background Video -->
    <video autoplay muted loop playsinline class="bg-video">
        <source src="~/CarVideos/Car Headlight.mp4  " type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Dark overlay -->
    <div class="bg-overlay"></div>

    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="wrapper">
            <form asp-controller="Admin" asp-action="AdminLogin" method="post">
                <h2>Admin Login</h2>

                <div class="input-field">
                    <input asp-for="Identifier" required />
                    <label asp-for="Identifier">Admin Email or Username</label>
                </div>

                <div class="input-field">
                    <input asp-for="Password" type="password" required />
                    <label asp-for="Password">Password</label>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="custom-alert fade show" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                        <button type="button" class="btn-close" aria-label="Close" onclick="this.parentElement.style.display='none';"></button>
                    </div>
                }


                <button type="submit">Login</button>

                <div class="forgot">
                    <p><a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a></p>
                </div>
            </form>
        </div>
    </div>
</body>

<style>
    :root {
        --primary-blue: #007bff;
        --dark-start: #071028;
        --dark-end: #071226;
        --light-text: #e6eef8;
    }

    body {
        min-height: 100vh;
        font-family: "Segoe UI", sans-serif;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    /* Background Video */
    .bg-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -2;
    }

    /* Dark gradient overlay */
    .bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, var(--dark-start) 0%, var(--dark-end) 100%);
        opacity: 0.3;
        z-index: -1;
    }

    .wrapper {
        margin-bottom: -20px;
        width: 100%;
        max-width: 400px;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        border: 1px solid var(--primary-blue);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.05);
    }

        .wrapper:hover {
            transform: translateY(-5px);
            border-color: var(--primary-blue);
            box-shadow: 0 0 25px rgba(0, 123, 255, 0.8);
        }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        font-weight: 700;
        text-shadow: 0 0 15px rgba(0, 123, 255, 0.6);
        color: var(--light-text);
    }

    .input-field {
        position: relative;
        border-bottom: 2px solid var(--primary-blue);
        margin-bottom: 25px;
        text-align: left;
    }

        .input-field label {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            color: #ccc;
            font-size: 16px;
            pointer-events: none;
            transition: 0.4s ease;
        }

        .input-field input {
            width: 100%;
            height: 40px;
            background: transparent;
            border: none;
            outline: none;
            font-size: 16px;
            color: var(--light-text);
        }

            .input-field input:focus ~ label,
            .input-field input:valid ~ label {
                font-size: 0.8rem;
                top: 10px;
                transform: translateY(-120%);
                color: var(--primary-blue);
            }

    .custom-alert {
        background: rgba(220, 53, 69, 0.15); /* soft transparent red */
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: none;
        color: #ff4d4d;
        font-weight: 500;
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0 0 12px rgba(220, 53, 69, 0.3);
        position: relative;
    }

        .custom-alert .btn-close {
            position: absolute;
            top: 8px;
            right: 10px;
            background: transparent;
            border: none;
            color: #ff4d4d;
            font-size: 18px;
            cursor: pointer;
        }

            .custom-alert .btn-close:hover {
                color: #ff1a1a;
            }


    button {
        background: var(--primary-blue);
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 12px 20px;
        cursor: pointer;
        border-radius: 6px;
        font-size: 16px;
        border: 2px solid transparent;
        transition: 0.3s ease;
        width: 100%;
        box-shadow: 0 0 7px rgba(0, 123, 255, 0.4);
    }

        button:hover {
            background-color: transparent;
            border-color: var(--primary-blue);
            color: var(--light-text);
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(0, 123, 255, 0.7);
        }

    .forgot {
        margin-top: 15px;
        font-size: 14px;
    }

        .forgot a {
            color: #ddd;
            text-decoration: none;
            transition: 0.3s ease;
        }

            .forgot a:hover {
                color: var(--primary-blue);
                text-shadow: 0 0 6px var(--primary-blue);
            }
</style>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const inputs = document.querySelectorAll('input');
        const alertBox = document.querySelector('.custom-alert');

        if(alertBox){
            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    alertBox.style.display = 'none';
                });
            });
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

