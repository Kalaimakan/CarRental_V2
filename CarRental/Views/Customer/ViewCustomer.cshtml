@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 glass-alert" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<CarRental.DTOs.CustomerDto>

<div class="container mt-4">
    <div class="glass-card">
        <!-- Header -->
        <h2 class="mb-3 text-center">
            <i class="bi bi-people-fill me-2"></i> Customer List
        </h2>

        <!-- Search + Add -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="w-50">
                <input type="text" id="searchInput"
                       placeholder="🔍 Search customers..."
                       class="form-control glass-input" />
            </div>
            <a class="btn btn-success btn-sm px-3"
               asp-controller="Customer" asp-action="Add">
                <i class="bi bi-person-plus-fill me-1"></i> Add Customer
            </a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="glass-table">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person-fill me-1"></i>Name</th>
                            <th><i class="bi bi-envelope-fill me-1"></i>Email</th>
                            <th><i class="bi bi-telephone-fill me-1"></i>Phone</th>
                            <th><i class="bi bi-card-text me-1"></i>Licence No</th>
                            <th><i class="bi bi-house-fill me-1"></i>Address</th>
                            <th class="text-center"><i class="bi bi-gear-fill me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@customer.Name</td>
                                <td>@customer.Email</td>
                                <td>@customer.PhoneNumber</td>
                                <td>@customer.LicenceNumber</td>
                                <td>@customer.Address</td>
                                <td class="text-center action-buttons">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a class="btn btn-sm btn-info px-3"
                                           asp-controller="Customer" asp-action="CustomerDetail" asp-route-id="@customer.Id">
                                            <i class="bi bi-eye-fill"></i> Detail
                                        </a>
                                        <a class="btn btn-sm btn-warning px-3"
                                           asp-controller="Customer" asp-action="Update" asp-route-id="@customer.Id">
                                            <i class="bi bi-pencil-fill"></i> Edit
                                        </a>
                                        <a class="btn btn-sm btn-danger px-3"
                                           asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id"
                                           onclick="return confirm('Are you sure you want to delete this customer?');">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info glass-alert text-center mt-4">
                <i class="bi bi-exclamation-circle me-2"></i> No customers found.
            </div>
        }
    </div>
</div>

<style>
    /* Glassmorphism Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        padding: 20px;
        color: #fff;
    }

    h2 {
        font-weight: 600;
        letter-spacing: 1px;
        text-shadow: 0 0 10px rgba(13, 202, 240, 0.7);
    }

    /* Glass Input */
    .glass-input {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: #fff;
        border-radius: 8px;
    }

        .glass-input::placeholder {
            color: #bbb;
        }

    /* Glass Table */
    .glass-table {
        width: 100%;
        border-collapse: collapse;
        color: #fff;
    }

        .glass-table thead {
            background: rgba(255, 255, 255, 0.08);
        }

        .glass-table th,
        .glass-table td {
            padding: 12px 16px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
            white-space: nowrap; /* Prevent wrapping */
            vertical-align: middle;
        }

        .glass-table th {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .glass-table tbody tr {
            transition: all 0.3s ease;
        }

            .glass-table tbody tr:hover {
                background: rgba(255, 255, 255, 0.12);
                transform: scale(1.01);
                box-shadow: 0 0 12px rgba(13, 202, 240, 0.4);
            }

    /* Keep action buttons inline */
    .action-buttons {
        white-space: nowrap;
    }

        .action-buttons .btn {
            flex-shrink: 0;
        }

    /* Gradient Buttons */
    .btn-info {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        border: none;
        color: #fff;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f7971e, #ffd200);
        border: none;
        color: #000;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        border: none;
        color: #fff;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #85dcb);
        border: none;
        color: #fff;
    }

    .btn-sm {
        border-radius: 8px;
    }

    /* Alerts */
    .glass-alert {
        background: rgba(0, 255, 100, 0.1);
        color: #00ff88;
        border: 1px solid rgba(0, 255, 100, 0.4);
        border-radius: 10px;
        backdrop-filter: blur(6px);
    }
</style>

<script>
    const searchInput = document.getElementById("searchInput");
    const tableRows = document.querySelectorAll(".glass-table tbody tr");

    searchInput.addEventListener("keyup", function () {
        const query = searchInput.value.toLowerCase();

        tableRows.forEach(row => {
            const text = row.innerText.toLowerCase();
            if (text.includes(query)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });
</script>
