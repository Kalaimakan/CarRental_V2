@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@model CarRental.DTOs.CustomerDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Profile Header -->
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header text-white text-center py-3"
                     style="background: linear-gradient(135deg, #007bff, #00c6ff);">
                    <h4 class="mb-1 fw-bold text-uppercase">@Model.Name</h4>
                    <p class="mb-0 small"><i class="bi bi-envelope-at-fill me-1"></i>@Model.Email</p>
                </div>

                <!-- Profile Body -->
                <div class="card-body bg-dark text-white p-4">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <div class="p-3 bg-secondary bg-opacity-25 rounded-3">
                                <h6 class="text-muted small mb-1"><i class="bi bi-telephone-fill me-2"></i>Phone</h6>
                                <p class="mb-0 fs-6 fw-semibold">@Model.PhoneNumber</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 bg-secondary bg-opacity-25 rounded-3">
                                <h6 class="text-muted small mb-1"><i class="bi bi-card-text me-2"></i>Licence Number</h6>
                                <p class="mb-0 fs-6 fw-semibold">@Model.LicenceNumber</p>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="p-3 bg-secondary bg-opacity-25 rounded-3">
                                <h6 class="text-muted small mb-1"><i class="bi bi-geo-alt-fill me-2"></i>Address</h6>
                                <p class="mb-0 fs-6 fw-semibold">@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card-footer d-flex justify-content-between flex-wrap gap-2 p-3 bg-dark">
                    <a asp-controller="Customer" asp-action="ViewCustomer"
                       class="btn btn-outline-light btn-md px-3">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-controller="Customer" asp-action="Update" asp-route-id="@Model.Id"
                           class="btn btn-warning btn-md me-2 px-3">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@Model.Id"
                           class="btn btn-danger btn-md px-3"
                           onclick="return confirm('Are you sure you want to delete this customer?');">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
