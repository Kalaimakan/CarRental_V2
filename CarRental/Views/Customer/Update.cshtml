@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model CarRental.DTOs.CustomerDto

@{
    ViewData["Title"] = "Update Customer";
}

<div class="update-customer-page d-flex flex-column min-vh-100 bg-dark text-white">
    <!-- Header -->
    <header class="text-center py-5" 
            style="background: linear-gradient(135deg, #0d1b2a, #1b263b, #415a77);">
        <h2 class="fw-bold text-uppercase mb-1">@ViewData["Title"]</h2>
        <small class="text-light">Update customer information below</small>
    </header>

    <!-- Form Section -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center px-3 py-4">
        <div class="w-100" style="max-width: 700px;">
            <form asp-action="Update" method="post" novalidate 
                  class="bg-dark p-4 p-md-5 rounded-4 shadow-lg border border-secondary">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-0 text-white">
                            <i class="bi bi-person-fill"></i>
                        </span>
                        <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Enter full name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-0 text-white">
                            <i class="bi bi-envelope-fill"></i>
                        </span>
                        <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="Enter email address" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-0 text-white">
                            <i class="bi bi-telephone-fill"></i>
                        </span>
                        <input asp-for="PhoneNumber" class="form-control bg-dark text-white border-secondary" placeholder="Enter phone number" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Licence -->
                <div class="mb-3">
                    <label asp-for="LicenceNumber" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-0 text-white">
                            <i class="bi bi-card-text"></i>
                        </span>
                        <input asp-for="LicenceNumber" class="form-control bg-dark text-white border-secondary" placeholder="Enter licence number" />
                    </div>
                    <span asp-validation-for="LicenceNumber" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-0 text-white">
                            <i class="bi bi-house-fill"></i>
                        </span>
                        <input asp-for="Address" class="form-control bg-dark text-white border-secondary" placeholder="Enter address" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex flex-column flex-sm-row justify-content-between gap-3 mt-4">
                    <a asp-action="ViewCustomer" class="btn btn-outline-light w-100 w-sm-auto px-4">
                        <i class="bi bi-arrow-left me-2"></i> Cancel
                    </a>
                    <button type="submit" 
                            class="btn w-100 w-sm-auto px-4 fw-bold text-white"
                            style="background: linear-gradient(135deg, #0d6efd, #001f54); border: none;">
                        <i class="bi bi-pencil-square me-2"></i> Update Customer
                    </button>
                </div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
