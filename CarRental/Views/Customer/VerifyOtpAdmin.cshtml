@model CarRental.ViewModels.OtpViewModel

<div class="content-container d-flex justify-content-center align-items-center vh-100 bg-dark">
    <div class="otp-card text-white p-5 rounded shadow-lg">
        <h2 class="text-center mb-3">🔒 Admin OTP Verification</h2>
        <p class="text-center mb-4">Enter the 6-digit OTP sent to <strong>@Model.Email</strong></p>

        <form asp-action="VerifyOtpAdmin" method="post" class="text-center">
            <input type="hidden" asp-for="Email" />
            <div class="mb-3">
                <label for="otp" class="form-label">OTP</label>
                <input asp-for="Otp" class="form-control otp-input mx-auto" style="max-width: 200px;" />
            </div>
            <button type="submit" class="btn btn-danger btn-verify mt-3">Verify</button>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #111; /* Dark background */
    }

    .otp-card {
        background: linear-gradient(135deg, #1a1a1a, #2c2c2c);
        border: 2px solid #ff0000;
        box-shadow: 0 8px 20px rgba(255, 0, 0, 0.6);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .otp-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(255, 0, 0, 0.8);
        }

    .otp-input {
        background-color: #111;
        border: 1px solid #ff0000;
        color: #fff;
        text-align: center;
    }

        .otp-input:focus {
            border-color: #ff4444;
            box-shadow: 0 0 10px #ff0000;
            outline: none;
        }

    .btn-verify {
        background-color: #ff0000;
        border: none;
        padding: 10px 30px;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-verify:hover {
            background-color: #cc0000;
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(255, 0, 0, 0.6);
        }
</style>
