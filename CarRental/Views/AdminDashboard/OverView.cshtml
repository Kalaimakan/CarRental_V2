<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .overview-container {
        padding: 30px;
    }

    .overview-card {
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.6);
        color: #fff;
    }

        .overview-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.8);
        }

        .overview-card .icon {
            font-size: 40px;
            margin-bottom: 15px;
            color: #fff;
        }

        .overview-card h4 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .overview-card p {
            font-size: 1.5rem;
            font-weight: bold;
        }

    /* Gradient card backgrounds */
    .customers-card {
        background: linear-gradient(135deg, #1e3a8a, #3b82f6);
    }

    .cars-card {
        background: linear-gradient(135deg, #065f46, #10b981);
    }

    .bookings-card {
        background: linear-gradient(135deg, #92400e, #f59e0b);
    }

    .revenue-card {
        background: linear-gradient(135deg, #6d28d9, #a855f7);
    }

    /* List group dark styling */
    .list-group-item {
        background-color: #1e1e2f;
        color: #e0e0e0;
        border: 1px solid #2a2a40;
    }

        .list-group-item:hover {
            background-color: #2a2a40;
        }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart').getContext('2d');

        const gradientBlue = ctx.createLinearGradient(0, 0, 0, 400);
        gradientBlue.addColorStop(0, 'rgba(59,130,246,0.6)');
        gradientBlue.addColorStop(1, 'rgba(59,130,246,0.05)');

        const gradientGreen = ctx.createLinearGradient(0, 0, 0, 400);
        gradientGreen.addColorStop(0, 'rgba(16,185,129,0.6)');
        gradientGreen.addColorStop(1, 'rgba(16,185,129,0.05)');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [
                    {
                        label: 'Revenue',
                        data: [3200, 4500, 3900, 6000, 7200, 8500],
                        borderWidth: 2,
                        borderColor: '#3b82f6',
                        backgroundColor: gradientBlue,
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Expenses',
                        data: [2200, 3100, 2800, 3500, 4200, 5000],
                        borderWidth: 2,
                        borderColor: '#10b981',
                        backgroundColor: gradientGreen,
                        fill: true,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        labels: { color: '#e0e0e0' }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#e0e0e0' },
                        grid: { color: '#333' }
                    },
                    y: {
                        ticks: { color: '#e0e0e0' },
                        grid: { color: '#333' }
                    }
                }
            }
        });
    </script>
}
