<style>
    /* Overlay Layer */
    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.03); /* light transparent layer */
        z-index: 0;
    }

    /* Transparent Button */
    .btn.btn-transparent {
        background: transparent;
        color: white;
        border: 2px solid white;
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.4s ease-in-out;
        border-radius: 8px;
    }

        .btn.btn-transparent:hover {
            color: #ff0000 !important;
            background: rgba(255, 255, 255, 0.1);
            border-color: #ff0000 !important;
            box-shadow: 0 0 12px rgba(255, 0, 0, 0.6);
            transform: translateY(-3px);
        }

        .btn.btn-transparent:active {
            color: #fff !important;
            background: rgba(0, 0, 0, 0.6) !important;
            border-color: #007bff !important;
            box-shadow: 0 0 12px rgba(0, 123, 255, 0.6);
            transform: scale(0.97);
        }

    /* ===================== */
    /* Animated Text Effect */
    /* ===================== */
    .animated-text span {
        display: inline-block;
        opacity: 0;
        transform: translateY(40px) scale(0.9);
        filter: blur(4px);
        animation: fancyFade 0.8s forwards;
    }

    /* Glowing fade-in animation */
    @@keyframes fancyFade {
        0% {
            opacity: 0;
            transform: translateY(40px) scale(0.9);
            filter: blur(4px);
            color: #ffffff;
            text-shadow: none;
        }

        60% {
            opacity: 1;
            transform: translateY(-5px) scale(1.05);
            filter: blur(0);
            text-shadow: 0 0 12px rgba(255, 0, 0, 0.6);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
            filter: blur(0);
            text-shadow: 0 0 4px rgba(255, 255, 255, 0.3);
        }
    }

    .animated-text span:nth-child(1) {
        animation-delay: 0.05s;
    }

    .animated-text span:nth-child(2) {
        animation-delay: 0.1s;
    }

    .animated-text span:nth-child(3) {
        animation-delay: 0.15s;
    }

    .animated-text span:nth-child(4) {
        animation-delay: 0.2s;
    }

    .animated-text span:nth-child(5) {
        animation-delay: 0.25s;
    }

    .animated-text span:nth-child(6) {
        animation-delay: 0.3s;
    }

    .animated-text span:nth-child(7) {
        animation-delay: 0.35s;
    }

    .animated-text span:nth-child(8) {
        animation-delay: 0.4s;
    }

    .animated-text span:nth-child(9) {
        animation-delay: 0.45s;
    }

    .animated-text span:nth-child(10) {
        animation-delay: 0.5s;
    }

    .animated-text span:nth-child(11) {
        animation-delay: 0.55s;
    }

    .animated-text span:nth-child(12) {
        animation-delay: 0.6s;
    }

    .animated-text span:nth-child(13) {
        animation-delay: 0.65s;
    }

    .animated-text span:nth-child(14) {
        animation-delay: 0.7s;
    }

    .animated-text span:nth-child(15) {
        animation-delay: 0.75s;
    }

    .animated-text span:nth-child(16) {
        animation-delay: 0.8s;
    }

    .animated-text span:nth-child(17) {
        animation-delay: 0.85s;
    }

    .animated-text span:nth-child(18) {
        animation-delay: 0.9s;
    }

    .animated-text span:nth-child(19) {
        animation-delay: 0.95s;
    }

    .animated-text span:nth-child(20) {
        animation-delay: 1s;
    }
</style>

<body>
    <!-- Video Background -->
    <div class="position-fixed top-0 start-0 vw-100 vh-100 overflow-hidden" style="z-index: -2;">
        <video autoplay loop muted playsinline class="w-100 h-100 object-fit-cover">
