@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<CarRental.DTOs.CarDto>

<div class="content-container text-white">
    <div class="container">
        <div class="row g-4">
            @foreach (var car in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow rounded position-relative car-card">

                        <!-- Price Tag -->
                        <span class="price-tag">Rs. @car.PricePerDay / day</span>

                        <!-- Car Image -->
                        <img src="~/images/@(car.Images.FirstOrDefault()?.FileName ?? "default-car.png")"
                             class="card-img-top rounded-top" alt="@car.CarModel" />

                        <!-- Availability Badge -->
                        @if (!car.Status)
                        {
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2 rounded-pill shadow-sm">
                                Not Available
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success position-absolute top-0 start-0 m-2 rounded-pill shadow-sm">
                                Available
                            </span>
                        }

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@car.CarBrand @car.CarModel</h5>

                            <div class="d-flex justify-content-between mb-2 small text-secondary">
                                <span><i class="bi bi-people-fill me-1"></i>@car.Seats seats</span>
                                <span><i class="bi bi-fuel-pump me-1"></i>@car.FuelType</span>
                            </div>

                            <div class="d-flex justify-content-between mb-3 small text-secondary">
                                <span><i class="bi bi-gear-fill me-1"></i>@car.Transmission</span>
                                <span><i class="bi bi-snow me-1"></i>@(car.HasAC ? "AC" : "Non-AC")</span>
                            </div>

                            <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id"
                               class="btn btn-primary w-100 mt-auto fw-bold">
                                <i class="bi bi-eye me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    :root {
        --primary-red: #ff0000;
        --dark-bg: #121212;
        --light-text: #f8f9fa;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--light-text);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .content-container {
        padding: 20px;
    }

    .card.car-card {
        background-color: var(--dark-bg);
        border: 1px solid var(--primary-red);
        border-radius: 10px;
        color: var(--light-text);
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        box-shadow: 0 0 5px 5px rgba(255, 0, 0, 0.3);
    }

        .card.car-card:hover {
            transform: translateY(-10px);
            border-color: var(--primary-red);
            box-shadow: 0 0 20px 10px rgba(255, 0, 0, 0.7);
        }

    .card-img-top {
        height: 180px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .card.car-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-body {
        position: relative;
        z-index: 1;
    }

    .card.car-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(255, 0, 0, 0.1) 0%, rgba(0,0,0,0.8) 70%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card.car-card:hover::before {
        opacity: 1;
    }

    .btn-primary {
        background-color: var(--primary-red);
        border: none;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: transparent;
            transform: translateY(-2px);
            box-shadow: 0 0px 7px 3px var(--primary-red);
        }

    .card-title {
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .badge {
        font-size: 0.85rem;
    }

    .price-tag {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(255, 0, 0, 0.8);
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.9rem;
        z-index: 2;
    }
</style>
