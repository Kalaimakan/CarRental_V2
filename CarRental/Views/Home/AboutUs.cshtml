<style>
    /* Add this to your <style> section */
    body {
        background-color: #121212;
        padding-top: 70px; /* adjust to your navbar height */
    }

    /* Optional: add slide-in effect for sections */
    .about-us-section,
    .company-history-section {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s ease-in-out;
    }

        .about-us-section.visible,
        .company-history-section.visible {
            opacity: 1;
            transform: translateY(0);
        }

    /* Company History Slider */
    .company-history-section {
        position: relative;
        overflow: hidden;
        color: white;
    }

    .history-slider {
        position: absolute;
        width: 100%;
        height: 100%;
    }

        .history-slider .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1.5s ease-in-out;
        }

            .history-slider .slide.active {
                opacity: 1;
            }

    .history-overlay {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    /* Team card hover effect */
    .team-card {
        transition: transform 0.4s ease, background 0.4s ease;
    }

        .team-card:hover {
            transform: translateY(-10px) scale(1.05);
            background: rgba(255, 0, 0, 0.1);
        }

    .team-card .card-body h5 {
        font-weight: 600;
        color: red;
    }

    .team-card .card-body p {
        color: #ccc;
        font-size: 0.95rem;
    }

    /* Social media icon hover effect */
    .team-card .card-body a i {
        transition: transform 0.5s ease, color 0.4s ease;
        transform-style: preserve-3d;
        color: white;
    }

    .team-card .card-body a:hover i {
        color: red;
        transform: scale(1.2);
    }

    /* Feedback Card */
    .feedback-card {
        background: #1a1a1a;
        color: white;
        overflow: hidden;
        transition: transform 0.4s ease;
        height: 100%;
        position: relative;
        border-radius: 10px;
    }

        .feedback-card:hover {
            transform: translateY(-10px) scale(1.03);
        }

    /* Red overlay background */
    .feedback-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 0;
        background: #d32f2f; /* Red overlay */
        transition: height 0.6s ease;
        z-index: 0;
        border-radius: 10px;
    }

    /* Expand red overlay on hover */
    .feedback-card:hover .feedback-overlay {
        height: 100%;
    }

    /* Keep content visible */
    .feedback-content {
        position: relative;
        z-index: 1;
        transition: color 0.6s ease;
    }

        /* Text styling */
        .feedback-content h5,
        .feedback-content p,
        .feedback-content h6 {
            transition: color 0.6s ease;
        }

    /* Change text color to white when red bg expands */
    .feedback-card:hover .feedback-content h5,
    .feedback-card:hover .feedback-content p,
    .feedback-card:hover .feedback-content h6 {
        color: #fff !important;
    }

    /* Customer name highlight */
    .feedback-content h6 {
        font-weight: 600;
        color: #d32f2f; /* red by default */
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<script>
    const slides = document.querySelectorAll('.history-slider .slide');
    let currentIndex = 0;

    function showNextSlide() {
        slides[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % slides.length;
        slides[currentIndex].classList.add('active');
    }

    setInterval(showNextSlide, 5000);

        // Animate sections on page load
    window.addEventListener('DOMContentLoaded', () => {
        document.querySelector('.company-history-section').classList.add('visible');
        document.querySelector('.about-us-section').classList.add('visible');
    });
</script>