@model CarRental.ViewModels.BookingViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0 bg-dark text-light p-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4 fw-bold" style="color: #00d1ff;">🚗 Book Your Car</h2>

                    <form asp-action="CreateBooking" method="post">
                        <!-- Start Date & Time -->
                        <div class="mb-3">
                            <label for="StartDate" class="form-label fw-semibold">Booking Start Date & Time</label>
                            <input type="date"
                                   id="StartDate"
                                   name="StartDate"
                                   class="form-control form-control-lg bg-secondary text-light border-0 rounded-3 mb-2"
                                   onchange="updateEndMin()" />
                            <input type="time"
                                   id="StartTime"
                                   name="StartTime"
                                   class="form-control form-control-lg bg-secondary text-light border-0 rounded-3"
                                   onchange="updateEndMin()" />
                        </div>

                        <!-- End Date & Time -->
                        <div class="mb-4">
                            <label for="EndDate" class="form-label fw-semibold">Booking End Date & Time (Min +24 hrs)</label>
                            <input type="date"
                                   id="EndDate"
                                   name="EndDate"
                                   class="form-control form-control-lg bg-secondary text-light border-0 rounded-3 mb-2" />
                            <input type="time"
                                   id="EndTime"
                                   name="EndTime"
                                   class="form-control form-control-lg bg-secondary text-light border-0 rounded-3" />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index","Home")" class="btn btn-outline-light btn-lg shadow-sm rounded-3">Cancel</a>
                            <button type="submit" class="btn btn-info btn-lg shadow-sm rounded-3">Book Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function padZero(n) { return n < 10 ? '0' + n : n; }

    function updateEndMin() {
        var startDate = document.getElementById("StartDate").value;
        var startTime = document.getElementById("StartTime").value;
        var endDate = document.getElementById("EndDate");
        var endTime = document.getElementById("EndTime");

        if (startDate && startTime) {
            var startDateTime = new Date(startDate + "T" + startTime);
            var minEndDateTime = new Date(startDateTime.getTime() + 24 * 60 * 60 * 1000);

            var yyyy = minEndDateTime.getFullYear();
            var mm = padZero(minEndDateTime.getMonth() + 1);
            var dd = padZero(minEndDateTime.getDate());
            var hh = padZero(minEndDateTime.getHours());
            var mi = padZero(minEndDateTime.getMinutes());

            endDate.min = yyyy + '-' + mm + '-' + dd;
            endTime.min = hh + ':' + mi;

            var currentEnd = new Date(endDate.value + 'T' + endTime.value);
            if (!isNaN(currentEnd) && currentEnd < minEndDateTime) {
                endDate.value = yyyy + '-' + mm + '-' + dd;
                endTime.value = hh + ':' + mi;
            }
        }
    }

    window.onload = function () {
        var today = new Date();
        var yyyy = today.getFullYear();
        var mm = padZero(today.getMonth() + 1);
        var dd = padZero(today.getDate());
        var hh = padZero(today.getHours());
        var mi = padZero(today.getMinutes());

        // Set min for Start Date & Time
        var startDate = document.getElementById("StartDate");
        var startTime = document.getElementById("StartTime");
        startDate.min = yyyy + '-' + mm + '-' + dd;
        startDate.value = yyyy + '-' + mm + '-' + dd;
        startTime.value = hh + ':' + mi;

        updateEndMin();
    }
</script>
