@model IEnumerable<CarRental.DTOs.BookingDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "All Booking";
}

<style>
    /* Glass container */
    .glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        padding: 20px;
    }

    h2 {
        color: #fff;
        font-weight: 600;
        letter-spacing: 1px;
    }

    /* Table styles */
    .glass-table {
        width: 100%;
        border-collapse: collapse;
        color: #fff;
    }

        .glass-table thead {
            background: rgba(255, 255, 255, 0.08);
        }

        .glass-table th, .glass-table td {
            padding: 12px 16px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
        }

        .glass-table th {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Hover row effect */
        .glass-table tbody tr {
            transition: all 0.3s ease;
        }

            .glass-table tbody tr:hover {
                background: rgba(255, 255, 255, 0.12);
                transform: scale(1.01);
                box-shadow: 0 0 12px rgba(255, 0, 0, 0.4);
            }

    /* Badge styling */
    .badge {
        padding: 6px 12px;
        font-size: 0.9rem;
        border-radius: 12px;
        font-weight: 500;
    }

    .bg-success {
        background: rgba(0, 255, 100, 0.2) !important;
        color: #00ff88 !important;
        border: 1px solid rgba(0, 255, 100, 0.4);
    }

    .bg-danger {
        background: rgba(255, 0, 60, 0.2) !important;
        color: #ff4d6d !important;
        border: 1px solid rgba(255, 0, 60, 0.4);
    }

    .bg-secondary {
        background: rgba(150, 150, 150, 0.2) !important;
        color: #ccc !important;
        border: 1px solid rgba(150, 150, 150, 0.4);
    }
</style>


<div class="container mt-4">
    <div class="glass-card">
        <h2 class="mb-3">📑 All Bookings</h2>

        <table class="glass-table">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Car</th>
                    <th>Pickup</th>
                    <th>Drop-off</th>
                    <th>Total Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.CustomerName</td>
                        <td>@booking.CarName</td>
                        <td>@booking.PickupDate.ToString("yyyy-MM-dd")</td>
                        <td>@booking.DropOffDate.ToString("yyyy-MM-dd")</td>
                        <td>$@booking.TotalPrice</td>
                        <td>
                            <span class="badge
                                 @(booking.Status == "Active" ? "bg-success" : booking.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                @booking.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
