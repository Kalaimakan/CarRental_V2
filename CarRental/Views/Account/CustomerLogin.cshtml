<body>
    <img class="bg-img" src="~/images/car.webp" alt="Background">

    <div class="wrapper">
        <form asp-action="CustomerLogin" asp-controller="Account" method="post">
            <h2>Login</h2>

            <div class="input-field">
                <input asp-for="Identifier" required />
                <label asp-for="Identifier">Email or Username</label>
            </div>

            <div class="input-field">
                <input asp-for="Password" type="password" required />
                <label asp-for="Password">Password</label>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-msg">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <button type="submit">Login</button>

            <div class="forgot">
                <p><a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a></p>
            </div>

            <div class="register">
                <p>Don’t have an account? <a asp-action="RegisterCustomer" asp-controller="Customer">Register</a></p>
            </div>
        </form>
    </div>
</body>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const inputs = document.querySelectorAll('input');
        const alertBox = document.querySelector('.error-msg');

        if(alertBox){
            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    alertBox.style.display = 'none';
                });
            });
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
