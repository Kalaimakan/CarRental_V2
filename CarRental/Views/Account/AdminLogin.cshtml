@model CarRental.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    :root {
        --primary-blue: #007bff;
        --dark-start: #071028;
        --dark-end: #071226;
        --light-text: #e6eef8;
    }

    body {
        min-height: 100vh;
        background: linear-gradient(180deg, var(--dark-start) 0%, var(--dark-end) 100%);
        color: var(--light-text);
        font-family: "Segoe UI", sans-serif;
        align-items: center;
        justify-content: center;
    }

    .wrapper {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        border: 1px solid var(--primary-blue);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.05);
    }

        .wrapper:hover {
            transform: translateY(-5px);
            border-color: var(--primary-blue);
            box-shadow: 0 0 25px rgba(0, 123, 255, 0.8);
        }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        font-weight: 700;
        text-shadow: 0 0 15px rgba(0, 123, 255, 0.6);
    }

    .input-field {
        position: relative;
        border-bottom: 2px solid var(--primary-blue);
        margin-bottom: 25px;
        text-align: left;
    }

        .input-field label {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            color: #ccc;
            font-size: 16px;
            pointer-events: none;
            transition: 0.4s ease;
        }

        .input-field input {
            width: 100%;
            height: 40px;
            background: transparent;
            border: none;
            outline: none;
            font-size: 16px;
            color: var(--light-text);
        }

            .input-field input:focus ~ label,
            .input-field input:valid ~ label {
                font-size: 0.8rem;
                top: 10px;
                transform: translateY(-120%);
                color: var(--primary-blue);
            }

    button {
        background: var(--primary-blue);
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 12px 20px;
        cursor: pointer;
        border-radius: 6px;
        font-size: 16px;
        border: 2px solid transparent;
        transition: 0.3s ease;
        width: 100%;
        box-shadow: 0 0 7px rgba(0, 123, 255, 0.4);
    }

        button:hover {
            background-color: transparent;
            border-color: var(--primary-blue);
            color: var(--light-text);
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(0, 123, 255, 0.7);
        }

    .forgot {
        margin-top: 15px;
        font-size: 14px;
    }

        .forgot a {
            color: #ddd;
            text-decoration: none;
            transition: 0.3s ease;
        }

            .forgot a:hover {
                color: var(--primary-blue);
                text-shadow: 0 0 6px var(--primary-blue);
            }
</style>

<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="wrapper">
            <form asp-action="AdminLogin" asp-controller="Account" method="post">
                <h2>Admin Login</h2>

                <div class="input-field">
                    <input asp-for="Identifier" required />
                    <label asp-for="Identifier">Admin Email or Username</label>
                </div>

                <div class="input-field">
                    <input asp-for="Password" type="password" required />
                    <label asp-for="Password">Password</label>
                </div>

                <span asp-validation-summary="ModelOnly" class="text-danger d-block mb-2"></span>

                <button type="submit">Login</button>

                <div class="forgot">
                    <p><a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
