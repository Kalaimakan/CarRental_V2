@model CarRental.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    :root {
        --primary-red: #ff0000;
        --dark-bg: #121212;
        --light-text: #f8f9fa;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        width: 100%;
        height: 100vh;
        background: var(--dark-bg);
        color: var(--light-text);
        position: relative;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    /* Background image */
    .bg-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    .wrapper {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        margin: 8% auto;
        border-radius: 10px;
        text-align: center;
        border: 1px solid var(--primary-red);
        backdrop-filter: blur(9px);
        -webkit-backdrop-filter: blur(9px);
        box-shadow: 0 0 5px 5px rgba(255, 0, 0, 0.3);
        transition: all 0.3s ease;
    }

        .wrapper:hover {
            transform: translateY(-5px);
            border-color: red;
            box-shadow: 0 0 20px 5px rgba(255, 0, 0, 0.7);
        }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #fff;
        font-weight: 700;
        text-shadow: 0 0 10px rgba(255,0,0,0.6);
    }

    .input-field {
        position: relative;
        border-bottom: 2px solid #ff0000;
        margin-bottom: 25px;
    }

        .input-field label {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            color: #fff;
            font-size: 16px;
            pointer-events: none;
            transition: 0.8s ease;
        }

        .input-field input {
            width: 100%;
            height: 40px;
            background: transparent;
            border: none;
            outline: none;
            font-size: 16px;
            color: #fff;
        }

            .input-field input:focus ~ label,
            .input-field input:valid ~ label {
                font-size: 0.8rem;
                top: 10px;
                transform: translateY(-120%);
                color: var(--primary-red);
            }

    button {
        background: var(--primary-red);
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 12px 20px;
        cursor: pointer;
        border-radius: 5px;
        font-size: 16px;
        border: 2px solid transparent;
        transition: 0.3s ease;
        box-shadow: 0 0 7px 3px rgba(255, 0, 0, 0.3);
        width: 100%;
    }

        button:hover {
            background-color: transparent;
            border-color: var(--primary-red);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 0 15px 7px rgba(255, 0, 0, 0.6);
        }

    .register {
        text-align: center;
        margin-top: 20px;
        color: #fff;
    }

        .register a {
            color: #efefef;
            text-decoration: none;
            transition: 0.3s ease;
        }

            .register a:hover {
                color: var(--primary-red);
                text-shadow: 0 0 5px red;
            }

    .register, .forgot {
        text-align: center;
        margin-top: 15px;
        color: #fff;
    }

        .register a, .forgot a {
            color: #efefef;
            text-decoration: none;
            transition: 0.3s ease;
        }

            .register a:hover, .forgot a:hover {
                color: var(--primary-red);
                text-shadow: 0 0 5px red;
            }

    #errorMsg {
        color: #ff8080;
        font-size: 14px;
        margin-bottom: 10px;
        display: none;
    }
</style>

<body>
    <img class="bg-img" src="~/images/car.webp" alt="Background">

    <div class="wrapper">
        <form asp-action="Login" asp-controller="Account" method="post">
            <h2>Login</h2>

            <div class="input-field">
                <input asp-for="Identifier" required />
                <label asp-for="Identifier">Email or Username</label>
            </div>

            <div class="input-field">
                <input asp-for="Password" type="password" required />
                <label asp-for="Password">Password</label>
            </div>

            <span asp-validation-summary="ModelOnly" class="text-danger"></span>

            <button type="submit">Login</button>

            <div class="forgot">
                <p><a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a></p>
            </div>

            <div class="register">
                <p>Don’t have an account? <a asp-action="RegisterCustomer" asp-controller="Customer">Register</a></p>
            </div>
        </form>
    </div>
</body>